<h3>Mon cocktail</h3>

<div>
  <%= @cocktail.name %>
  <%= image_tag @cocktail.picture.url(:medium) %>
  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %> - <%=dose.ingredient.name %>
      <%= link_to cocktail_dose_path(@cocktail, dose), method: :delete, data: { confirm: "Are you sure?" } do%>
      <i class="fa fa-trash"></i>
      <% end %>
    </li>
    <% end %>
  </ul>
  <div><%= link_to "Back to list", cocktails_path, class:'btn btn-primary' %></div>
  <div><%= link_to "Add dose", new_cocktail_dose_path(@cocktail), class:'btn btn-primary'%></div>





<!--  -->
</div>
